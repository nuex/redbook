<% @page_title = "Agency" %>
<%= link_to("<< Back to Management Page", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>
<%= link_to("To Programs Page>>", {:controller => 'programs', :action => 'index'}, :class => 'back-link-right') %>
<div class="agencies index">
  <h2>Agencies</h2>
  
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>

  
  <%= link_to("Add New Agency", {:action => 'new'}, :class => 'action new') %>
  
  <table class="listing" summary="Agency list">
	<tr class="header">
	  
	  <th>Name</th>
	  <th>Phone</th>
	  <th>Purpose</th>
	  <th class="column1">Website</th>
	</tr>
	<% @agencies.each do |agency| %>
	<tr>
	  
	  <td><%= agency.name %></td>
	  <td><%= number_to_phone(agency.phonenum, :area_code => true) %></td>
	  <td><%= agency.purpose %></td>
	  <td class="column1"><%= agency.website %></td>
	  <td class="actions">
		<%= link_to("Show", {:action => 'show', :id => agency.id}, :class => 'action show') %>
		<%= link_to("Edit", {:action => 'edit', :id => agency.id}, :class => 'action edit') %>
		<%= link_to("Delete", {:action => 'delete', :id => agency.id}, :class => 'action delete') %>
	  </td>
	</tr>
	<% end %>
  </table>
</div>