<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="categories show">
  <h2> Show Category</h2>
  
  <table summary="Category detail view">
    <tr>
	  <th>Name:</th>
	  <td><%= @category.name %></td>
	</tr>
	<tr>
	  <th>Description:</th>
	  <td><%= @category.description %></td>
	</tr>
    <tr>
	  <th>Created:</th>
	  <td><%= @category.created_at.strftime("%b %d, %Y %I:%M %p %Z") %></td>
	</tr>
    <tr>
	  <th>Updated:</th>
	  <td><%= @category.updated_at.strftime("%b %d, %Y %I:%M %p %Z") %></td>
	</tr>
  </table>

</div>